@model ProyectoFinal_WebApp.Entities.Contacto
@{
    ViewData["Title"] = "Contacto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="h3 mb-5 text-black">Contactenos</h2>
            </div>
            <div class="col-md-12">

                @using (Html.BeginForm("Contacto", "Login", FormMethod.Post))
                {

                    <div class="p-3 p-lg-5 border">
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label for="c_fname" class="text-black">Nombre <span class="text-danger">*</span></label>
                                @Html.TextBoxFor(Model => Model.Nombre, new {@class = "form-control", required="require"})
                            </div>

                            <div class="col-md-6">
                                <label for="c_lname" class="text-black">Apellidos <span class="text-danger">*</span></label>
                                @Html.TextBoxFor(Model => Model.Apellidos, new {@class = "form-control bg-white", required="required"})
                            </div>

                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="c_email" class="text-black">Correo <span class="text-danger">*</span></label>
                                @Html.TextBoxFor(Model => Model.Correo, new {@class = "form-control bg-white", required="required"})

                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="c_subject" class="text-black">Asunto <span class="text-danger">*</span></label>
                                @Html.TextBoxFor(Model => Model.Asunto, new {@class = "form-control bg-white", required="required"})
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="c_message" class="text-black">Mensaje  <span class="text-danger">*</span></label>
                                @Html.TextAreaFor(Model => Model.Mensaje, new {@class = "form-control bg-white", required="required"})

                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <input type="submit" value="Enviar" class="btn btn-primary btn-block py-2 font-weight-bold" />

                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>

