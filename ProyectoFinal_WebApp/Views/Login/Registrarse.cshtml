@model ProyectoFinal_WebApp.Entities.LoginObj2
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Registrarse";
}

<div class="container">
    <div class="row py-5 mt-4 align-items-center">
        <div class="col-md-5 pr-lg-5 mb-5 mb-md-0">

            <h1>Crear Cuenta</h1>
            <p class="font-italic text-muted mb-0">Cree su cuenta llenando los siguientes espacios.</p>

        </div>            
        <div class="col-md-7 col-lg-6 ml-auto">
            @using (Html.BeginForm("Registrarse", "Login", FormMethod.Post))
            {
                <div class="row">


                    <div class=" col-lg-12 mb-3">
                        @Html.TextBoxFor(Model => Model.Cedula, new {@class = "form-control bg-white", required="required", placeholder="Cédula"})
                    </div>

                    <div class=" col-lg-12 mb-3">
                        @Html.TextBoxFor(Model => Model.Nombre, new {@class = "form-control bg-white", required="required", placeholder="Nombre Completo"})
                    </div>
                    <div class=" col-lg-12 mb-3">
                        @Html.TextBoxFor(Model => Model.PApellido, new {@class = "form-control bg-white", required="required", placeholder="Primer Apellido"})
                    </div>
                    <div class=" col-lg-12 mb-3">
                        @Html.TextBoxFor(Model => Model.SApellido, new {@class = "form-control bg-white", required="required", placeholder="Segundo Apellido"})
                    </div>
                    <div class=" col-lg-12 mb-3">
                        @Html.TextBoxFor(Model => Model.Telefono, new {@class = "form-control bg-white", required="required", placeholder="Número de Teléfono", type="number"})
                    </div>
                    <div class=" col-lg-12 mb-3">
                        @Html.TextBoxFor(Model => Model.Correo, new {@class = "form-control bg-white", required="required", placeholder="Correo Electrónico", type="email"})
                    </div>
                    <div class=" col-lg-12 mb-3">
                        @Html.TextAreaFor(Model => Model.Direccion, new {@class = "form-control bg-white", required="required", placeholder="Dirección Exacta"})
                    </div>
                    <div class="input-group col-lg-6 mb-4">
                        @Html.PasswordFor(Model => Model.Contrasenia, new {@class = "form-control bg-white", required="required", placeholder="Contraseña"})
                    </div>

                    <div class="input-group col-lg-6 mb-4">
                        <input id="passwordConfirmation" type="text" name="passwordConfirmation" placeholder="Confirmar Contraseña" class="form-control bg-white ">
                    </div>

                    <div class="form-group col-lg-12 mx-auto mb-0">
                        <input type="submit" class="btn btn-primary btn-block py-2 font-weight-bold" value="Crear Cuenta" />
                    </div>

                    <div class="form-group col-lg-12 mx-auto d-flex align-items-center my-4">
                        <div class="border-bottom w-100 ml-5"></div>
                        <span class="px-2 small text-muted font-weight-bold text-muted"></span>
                        <div class="border-bottom w-100 mr-5"></div>
                    </div>

                    <div class="text-center w-100">
                        <p class="text-muted font-weight-bold">¿Ya estás registrado? <a href="@Url.Action("Login","Login")" class="text-primary ml-2">Iniciar Sesión</a></p>
                    </div>

                </div>
            }
                

        </div>
    </div>
</div>


