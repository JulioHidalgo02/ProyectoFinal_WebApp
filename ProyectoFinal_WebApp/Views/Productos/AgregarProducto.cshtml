@model ProyectoFinal_WebApp.Entities.ProductoObj
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "AgregarProducto";
}


<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="h3 mb-5 text-black">Agregar Producto</h2>
            </div>
            <div class="col-md-12">

                @using (Html.BeginForm("AgregarProducto", "Productos", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    <div class="p-3 p-lg-5 border">
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label for="c_fname" class="text-black">Nombre del Producto <span class="text-danger">*</span></label>
                                @Html.TextBoxFor(Model => Model.NOMPRODUCTO, new {@class = "form-control bg-white", required="required"})
                                
                            </div>
                            <div class="col-md-6">
                                <label for="c_lname" class="text-black">Precio<span class="text-danger">*</span></label>
                                @Html.TextBoxFor(Model => Model.PRECIO, new {@class = "form-control bg-white", required="required", type="number"})
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="c_email" class="text-black">Cantidad <span class="text-danger">*</span></label>
                                @Html.TextBoxFor(Model => Model.CANTDISPO, new {@class = "form-control bg-white", required="required", type="number"})
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="c_subject" class="text-black">Descripción del Producto </label>
                                @Html.TextBoxFor(Model => Model.DESCRIP, new {@class = "form-control bg-white", required="required"})
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="c_message" class="text-black">Imagen del Producto </label>
                                @Html.TextBoxFor(Model => Model.URL, new {@type = "file" , @class = "form-control bg-white", required="required"})
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <input type="submit" class="btn btn-primary btn-lg btn-block" value="Agregar Producto">
                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>
    </div>
</div>



