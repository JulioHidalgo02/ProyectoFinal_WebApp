@model ProyectoFinal_WebApp.Entities.ProductoObj2
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="site-section">
    @using (Html.BeginForm("AgregarAlCarrito", "Carrito", FormMethod.Post))
    {
        <div class="container">
            <div class="row">
                <div class="col-md-5 mr-auto">
                    <div class="border text-center">
                        <img src="@Html.DisplayFor(m => m.URLimagen)" alt="Image" class="img-fluid p-5">

                    </div>
                </div>
                <div class="col-md-6">
                    <h2 class="text-black">@Html.DisplayFor(m => m.NombreProducto)</h2>
                    @Html.HiddenFor(m => m.NombreProducto)
                    <p>
                        @Model.DescripcionProducto
                    </p>


                    <p> <strong class="text-primary h4">₡@Html.DisplayFor(m => m.Precio)</strong></p>
                    @Html.HiddenFor(m => m.Precio)
                    @Html.HiddenFor(m => m.IdInventario)



                    <div class="mb-5">
                        <div class="input-group mb-3" style="max-width: 220px;">
                            <div class="input-group-prepend">
                                <button class="btn btn-outline-primary js-btn-minus" type="button">&minus;</button>
                            </div>
                            @Html.TextBoxFor(m => m.CantComprar, new{@class="form-control text-center",value="1" })
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary js-btn-plus" type="button">&plus;</button>
                            </div>
                        </div>

                    </div>
                    <p><input type="submit" class="buy-now btn btn-sm height-auto px-4 py-3 btn-primary" value="Añadir al carrito"/></p>
                </div>
            </div>
        </div>
    }
</div>
