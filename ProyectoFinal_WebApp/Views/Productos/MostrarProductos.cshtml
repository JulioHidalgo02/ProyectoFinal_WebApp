@model IEnumerable<ProyectoFinal_WebApp.Entities.ProductoObj2>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="site-section">
    <div class="container">



        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-lg-4 text-center item mb-4">

                    <a href="@Url.Action("MostrarProductoIndividual","Productos", new{id = item.IdInventario})"> <img src="@item.URLimagen" width="350" height="350"  alt="Image"></a>
                    <h3 class="text-dark"><a href="shop-single.html">@item.NombreProducto</a></h3>
                    <p class="price">₡ @item.Precio</p>
                </div>

            }
        </div>

    </div>
</div>

